# Generated by install_and_configure.sh (Example)

# === Network ===
IP_SERVER=127.0.0.1
DDNS_DOMAIN=example-domain
DDNS_TOKEN=your-ddns-token
DDNS_PROVIDER=duckdns

# === RCON ===
RCON_PASSWORD=securepassword
BACKUP=true

# === Server Properties ===
VERSION=1.21.1
TYPE=NEOFORGE
FORGE_VERSION=
NEOFORGE_VERSION=
FABRIC_LAUNCHER_VERSION=
FABRIC_LOADER_VERSION=
INIT_MEMORY=2G
MEMORY=6G
MAX_PLAYERS=8
MOTD="§6Example Server §7| §bForge 1.21.1"
SEED=
OPS=op1,op2,
EULA=TRUE
ONLINE_MODE=FALSE

# === Restic Backup ===
RESTIC_HOSTNAME=MinecraftServer
RESTIC_PASSWORD=securepassword
RESTIC_REPOSITORY=rclone:mega:/minecraft-backups
RESTIC_TAG=game_backups
RESTIC_KEEP_LAST=6
RESTIC_IMAGE=docker.io/tofran/restic-rclone:0.17.0_1.68.2

# === AutoStop / AutoPause ===
# ENABLE_AUTOSTOP=TRUE
# AUTOSTOP_TIMEOUT_EST=3600
# AUTOSTOP_TIMEOUT_INIT=1800
#
# ENABLE_AUTOPAUSE=TRUE
# MAX_TICK_TIME=-1
PAUSE_WHEN_EMPTY_SECONDS=300

# === Rclone ===
RCLONE_CONFIG=/root/.config/rclone/rclone.conf
RCLONE_CONF_HOST=./env/rclone.conf.example

# === Mutex (Locking) ===
MUTEX_REMOTE_DIR=mega:/minecraft-backups

# === Docker Compose Names ===
MC_CONTAINER_NAME=minecraft-server
